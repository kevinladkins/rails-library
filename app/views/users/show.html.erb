<h1><%= @user.name%></h1>
<% if @user.checked_out_books.any?%>
<h3>Current Loans: </h3>
<ul>
  <%@user.loans.checked_out.each do |l|%>
  <li><%=l.book.title%> ||
    <%if l.overdue?%>
      OVERDUE -- PLEASE RETURN
    <%else%>
      due on <%= l.due_date.strftime("%A, %B %W %Y") %>
    <%end%>
      <%=button_to "Return", loan_path(l), method: :put%>
  </li>
  <%end%>
</ul>
<%end%>
