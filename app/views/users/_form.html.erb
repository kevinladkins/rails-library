<%= form_for user do |f| %>
	<%= f.label :role, "New Librarian" %>
	<%= f.radio_button :role, "librarian" %>
	<%= f.label :role, "New Patron" %>
	<%= f.radio_button :role, "patron" %><br>
	<%= f.label :first_name %>
	<%= f.text_field :first_name%><br>
	<%= f.label :last_name %>
	<%= f.text_field :last_name%><br>
	<%= f.label :email %>
	<%= f.email_field :email%><br>
	<%= f.label :password%>
	<%= f.password_field :password%><br>
	<%= f.label :password_confirmation%>
	<%= f.password_field :password_confirmation%><br>
    <%= f.submit%>
<%end%>
