<!DOCTYPE html>
<html>
  <head>
    <title>RailsLibrary</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Libre+Franklin" %>
    <%= javascript_include_tag 'application'%>
    <%= javascript_include_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
  </head>

  <body>
    <div class="container-fluid">

  		<header class="page-header bg-primary">
  			<h1 id="logo">RAILS LIBRARY</h1>
  		</header>


     <nav class="navbar navbar-default">
       <div class="container-fluid">
		     <%= render 'layouts/site_nav'%>
       </div>
     </nav>



		<%= render 'layouts/flash'%>

      <%= yield %>
    </div><!-- close container-->




  </body>
</html>
