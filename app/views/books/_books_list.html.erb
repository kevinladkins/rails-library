<%if books.fiction.any?%>
  <h3>Fiction</h3>
	<ul>
	  <%books.fiction.each do |b|%>
		<% if author_view? %>
		   <li><%= link_to b.title, book_path(b)%>
		<%else%>
		  <li><%= link_to b.title, book_path(b)%> by <%=link_to b.author.name, author_path(b.author)%></li>
		<%end%>
	  <%end%>
	</ul>
<%end%>
	
<%if books.non_fiction.any?%>
  <h3>Non-Fiction</h3>
	<ul>
	  <%books.non_fiction.each do |b|%>
		<% if author_view? %>
		   <li><%= link_to b.title, book_path(b)%>
		<%else%>
		  <li><%= link_to b.title, book_path(b)%> by <%=link_to b.author.name, author_path(b.author)%></li>
		<%end%>
	  <%end%>
	</ul>
  <%end%>
