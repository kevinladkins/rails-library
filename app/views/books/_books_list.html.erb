
  <h3>Fiction</h3>
	<ul>
	  <%classification_list(books, "fiction").each do |b|%>
		<% if author_view? %>
		   <li><%= link_to b.title, book_path(b)%>
		<%else%>
		  <li><%= link_to b.title, book_path(b)%> by <%=link_to b.author.name, author_path(b.author)%></li>
		<%end%>
	  <%end%>
	</ul>
	
	
  <h3>Non-Fiction</h3>
	<ul>
	  <%classification_list(books, "non_fiction").each do |b|%>
		<% if author_view? %>
		   <li><%= link_to b.title, book_path(b)%>
		<%else%>
		  <li><%= link_to b.title, book_path(b)%> by <%=link_to b.author.name, author_path(b.author)%></li>
		<%end%>
	  <%end%>
	</ul>
 
