
<%if author_view?%>

	<%if librarian?%>
	
	   <h1>Manage Books by <%=link_to @author.name, author_path(@author)%></h1>
	   <%= button_to "Add a Book", new_book_path, method: :get%>
	
	<%else%>
	
		<h1>Browse Books by <%=link_to @author.name, author_path(@author)%></h1>
		
	<%end%>
	
	<%= render partial: 'application/search', locals: {item: @author.books.first}%><br>

    <%= render partial: 'books_list', locals: {books: @author.books}%>
    
<%else%>

  <% if librarian?%>
  
     <h1>Manage Books</h1>
     <%= button_to "Add a Book", new_book_path, method: :get%>
     
  <%else%>
  
    <h1>Browse Books</h1>
    
  <%end%>
  
    <h3><%=link_to "View Our Most-Borrowed Books", most_borrowed_books_path%></h3>
    
    <%= render partial: 'application/search', locals: {item: @books.first}%><br>
    
    <%= render partial: 'books_list', locals: {books: @books}%>
<%end%>
