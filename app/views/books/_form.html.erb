
<%= f.radio_button :classification, "fiction" %>
<%= f.label :classfication, "Fiction" %>
<%= f.radio_button :classification, "non_fiction" %>
<%= f.label :classfication, "Non-Fiction" %><br>
<%= f.label :title %>
<%= f.text_field :title%><br>
<%= f.label :author %>
<%= render partial: 'authors/selection', locals: {f: f}%>
<%= f.label :publication_year%>
<%= f.number_field :publication_year%><br>
<%= f.label :synopsis%><br>
<%= f.text_area :synopsis, :cols => "30", :rows => "5"%><br>
<%= f.label :copies%>
<%= f.number_field :copies%><br><br>
 
<%= field_set_tag "New Author" do %>
	
    <%= f.fields_for :author, book.build_author do |author_attributes|%>
			<%= render partial: 'authors/form', locals: {f: author_attributes}%>
		<%end%><br>
	
<%end%>


<%= field_set_tag "Categories" do %>
		
		<%= render partial: 'categories/check_boxes', locals: {f: f}%> <br><br>
		
		<%= f.label "New Category: " %>
		<%= f.fields_for :categories, book.categories.build do |category_attributes|%>
		  <%= render partial: 'categories/form', locals: {book: @book, f: category_attributes}%>
		<%end%><br>
	
	<%end%>