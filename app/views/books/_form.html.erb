<%= form_for book do |f|%>
<%= f.radio_button :classification, "fiction" %>
<%= f.label :classfication, "Fiction" %>
<%= f.radio_button :classification, "non_fiction" %>
<%= f.label :classfication, "Non-Fiction" %><br>
<%= f.label :title %>
<%= f.text_field :title%><br>
<%= f.label :author %>
<%= f.collection_select :author_id, Author.all, :id, :name%><br>
<%= field_set_tag "New Author" do %>
<%= f.label "New Author: "%><br>
<%= f.fields_for :author, book.build_author do |author_attributes|%>
<%= author_attributes.label :name%>
<%= author_attributes.text_field :name%><br>
<%= author_attributes.label :born%>
<%= author_attributes.date_field :born%><br>
<%= author_attributes.label :died%>
<%= author_attributes.date_field :died%><br>
<%end%><br>
<%end%>
<%= f.label :publication_year%>
<%= f.number_field :publication_year%><br>
<%= f.label :synopsis%><br>
<%= f.text_area :synopsis, :cols => "30", :rows => "5"%><br>
<%= f.label :copies%>
<%= f.number_field :copies%><br>
<%= f.submit%>
<%end%>
