<%=form_tag sessions_path do%>
  <div class="form-group">
    <%=label_tag "Email" %>
    <%=text_field_tag "user[email]", nil, class: "form-control"%>
  </div>
  <div class="form-group">
    <%=label_tag "Password"%>
    <%=password_field_tag "user[password]", nil, class: "form-control"%>
  </div>
    <%=submit_tag "Login", class: "btn btn-sm btn-primary"%>
<%end%>
